{
  "manifest_version": 2,

  "name": "Snoopify",
  "description": "This extension snoopifies your web experience.",
  "version": "4.20",

  "browser_action": {
    "default_icon": {"38": "icon.png"},
    "default_popup": "settings.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["snoopify.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}
